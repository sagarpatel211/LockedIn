{
  "manifest_version": 3,
  "name": "LinkedIn Sanity Filter",
  "version": "1.0",
  "description": "Hides brag posts and work history on LinkedIn.",
  "permissions": ["scripting", "storage", "webNavigation", "alarms", "commands", "tabs"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "reload": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Reload the extension"
    }
  }
}
